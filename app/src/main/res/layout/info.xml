<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/keyboardBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="400dp">

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:id="@+id/installTitle"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Installation" />

        <View style="@style/Divider"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/installText"
            android:textColor="@color/white"
            android:layout_margin="30dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/install" />

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:id="@+id/benefitsTitle"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why use a Dvorak layout?" />

        <View style="@style/Divider"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/benefitsText"
            android:textColor="@color/white"
            android:layout_margin="30dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/whydvorak" />
    </LinearLayout>
</ScrollView>